<!-- Bootstrap Popup Modal -->
<div id="popup-modal" class="alert alert-success alert-dismissible hidden" role="alert" style="position: fixed; top: 20px; right: 20px; z-index: 1050; width: auto; max-width: 300px;">
    <span id="popup-message"></span>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>

<!-- Link to Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

<script>
    // Function to open the popup with a dynamic message
    function openPopup(message) {
        const popupModal = document.getElementById('popup-modal');
        const popupMessage = document.getElementById('popup-message');
        popupMessage.textContent = message;
        popupModal.classList.remove('hidden'); // Make popup visible
        setTimeout(() => {
            closePopup();
        }, 5000); // Automatically close after 5 seconds
    }

    // Function to close the popup manually
    function closePopup() {
        const popupModal = document.getElementById('popup-modal');
        popupModal.classList.add('hidden'); // Hide the popup
    }
</script>

<style>
    /* Ensure popup is independent and floating */
    .hidden {
        display: none;
    }

    .alert {
        width: auto;
        max-width: 300px;
        padding: 15px;
        font-size: 16px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }
</style>
